{
  "builders": [{
      "type": "virtualbox-iso",
      "vm_name": "centos-7.1-x86_64-{{user `build_version`}}",
      "disk_size": 40960,

      "hard_drive_interface": "sata",

      "headless": "{{user `headless`}}",

      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_os_type": "RedHat_64",

      "http_directory": "http",
      "iso_url": "{{user `mirror`}}/CentOS-7-x86_64-DVD-1503-01.iso",
      "iso_checksum": "85bcf62462fb678adc0cec159bf8b39ab5515404bc3828c432f743a1b0b30157",
      "iso_checksum_type": "sha256",

      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",
      "output_directory": "output/{{.Provider}}-centos-7.1-x86_64",

      "ssh_wait_timeout": "10000s",
      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "ssh_port": 22,

      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [
          "modifyvm",       "{{.Name}}",
          "--memory",       480
        ],
        [
          "modifyvm",       "{{.Name}}",
          "--cpus",         2
        ]
      ],

      "boot_wait": "10s",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-7.1/ks.cfg<enter><wait>"
    ]}, {
      "type": "vmware-iso",
      "vm_name": "centos-7.1-x86_64-{{user `build_version`}}",
      "disk_size": 40960,

      "headless": "{{user `headless`}}",

      "tools_upload_flavor": "linux",
      "guest_os_type": "centos-64",

      "http_directory": "http",
      "iso_url": "{{user `mirror`}}/CentOS-7-x86_64-DVD-1503-01.iso",
      "iso_checksum": "85bcf62462fb678adc0cec159bf8b39ab5515404bc3828c432f743a1b0b30157",
      "iso_checksum_type": "sha256",

      "output_directory": "output/{{.Provider}}-centos-7.1-x86_64",
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",

      "ssh_wait_timeout": "10000s",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,

      "vmx_data": {
        "cpuid.coresPerSocket":   2,
        "memsize":                480,
        "numvcpus":               2
      },

      "boot_wait": "10s",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-7.1/ks.cfg<enter><wait>"
    ]}, {
      "type": "parallels-iso",
      "vm_name": "centos-7.1-x86_64-{{user `build_version`}}",
      "disk_size": 40960,

      "headless": "{{user `headless`}}",

      "parallels_tools_flavor": "lin",
      "guest_os_type": "centos",

      "http_directory": "http",
      "iso_url": "{{user `mirror`}}/CentOS-7-x86_64-DVD-1503-01.iso",
      "iso_checksum": "85bcf62462fb678adc0cec159bf8b39ab5515404bc3828c432f743a1b0b30157",
      "iso_checksum_type": "sha256",

      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",
      "output_directory": "output/{{.Provider}}-centos-7.1-x86_64",

      "ssh_wait_timeout": "10000s",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,

      "prlctl": [
        [ "set", "{{.Name}}", "--size",      51200 ],
        [ "set", "{{.Name}}", "--memsize",   480   ],
        [ "set", "{{.Name}}", "--cpus",      2     ]
      ],

      "prlctl_version_file": ".prlctl_version",

      "boot_wait": "10s",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-7.1/ks.cfg<enter><wait>"
    ]}
  ],

  "post-processors": [{
      "type": "vagrant",
      "output": "builds/{{user `box_basename`}}.{{.Provider}}.box",
      "compression_level": 9
  }],

  "provisioners": [{
      "type": "file",
      "destination": "/tmp/metadata.json",
      "source": "{{user `metadata`}}"
    }, {
      "type": "shell",
      "environment_vars": [],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",

      "scripts": [
        "scripts/common/metadata.sh",
        "scripts/centos/fix-slow-dns.sh",
        "scripts/common/sshd.sh",
        "scripts/common/vagrant.sh",
        "scripts/common/vmtools.sh",
        "scripts/centos/cleanup.sh",
        "scripts/common/minimize.sh"
      ]
    }, {
      "type": "puppet-masterless",
      "manifest_file": "site.pp"
  }],

  "variables": {
    "build_version": "1.0.0",

    "name": "centos-7.1",
    "box_basename": "centos-7.1",

    "arch": "64",
    "build_timestamp": "{{isotime \"20060102150405\"}}",
    "git_revision": "__unknown_git_revision__",

    "mirror": "../iso",
    "mirror2": "http://mirrors.kernel.org/centos/7.1.1503/isos/x86_64",

    "metadata": "floppy/dummy_metadata.json",
    "template": "centos-7.1-x86_64",
    "version": "2.0.TIMESTAMP",

    "required_modules": "puppetlabs-stdlib saz-sudo stahnma-puppetlabs_yum",
    "puppet_nfs": "{{env `PUPPET_NFS`}}",

    "headless": ""
  }
}
