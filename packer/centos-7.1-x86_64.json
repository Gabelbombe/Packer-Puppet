{
  "builders": [{
      "type": "virtualbox-iso",
      "vm_name": "centos-7.1-x86_64-{{user `build_version`}}",
      "disk_size": 40960,

      "hard_drive_interface": "sata",

      "headless": "{{user `headless`}}",

      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_os_type": "RedHat_64",

      "http_directory": "http",
      "iso_url": "{{user `mirror`}}/CentOS-7-x86_64-DVD-1503-01.iso",
      "iso_checksum": "85bcf62462fb678adc0cec159bf8b39ab5515404bc3828c432f743a1b0b30157",
      "iso_checksum_type": "sha256",

      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",
      "output_directory": "output/centos-7.1-vbox",

      "ssh_wait_timeout": "10000s",
      "ssh_password": "root",
      "ssh_username": "puppet",
      "ssh_port": 22,

      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory",    4096 ],
        [ "modifyvm", "{{.Name}}", "--cpus",      2    ]
      ],

      "virtualbox_version_file": ".vbox_version",

      "boot_wait": "10s",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-7.1/ks.cfg<enter><wait>"
    ]}, {
      "type": "vmware-iso",
      "vm_name": "centos-7.1-x86_64-{{user `build_version`}}",
      "disk_size": 40960,

      "headless": "{{user `headless`}}",

      "tools_upload_flavor": "linux",
      "guest_os_type": "centos-64",

      "http_directory": "http",
      "iso_url": "{{user `mirror`}}/CentOS-7-x86_64-DVD-1503-01.iso",
      "iso_checksum": "85bcf62462fb678adc0cec159bf8b39ab5515404bc3828c432f743a1b0b30157",
      "iso_checksum_type": "sha256",

      "output_directory": "output/centos-7.1-vmware",
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",

      "ssh_wait_timeout": "10000s",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,

      "vmx_data": {
        "memsize":                4096,
        "cpuid.coresPerSocket":   2,
        "numvcpus":               2
      },

      "boot_wait": "10s",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-7.1/ks.cfg<enter><wait>"
    ]}, {
      "type": "parallels-iso",
      "vm_name": "centos-7.1-x86_64-{{user `build_version`}}",
      "disk_size": 40960,

      "headless": "{{user `headless`}}",

      "parallels_tools_flavor": "lin",
      "guest_os_type": "centos",

      "http_directory": "http",
      "iso_url": "{{user `mirror`}}/CentOS-7-x86_64-DVD-1503-01.iso",
      "iso_checksum": "85bcf62462fb678adc0cec159bf8b39ab5515404bc3828c432f743a1b0b30157",
      "iso_checksum_type": "sha256",

      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",
      "output_directory": "output/centos-7.1-parallels",

      "ssh_wait_timeout": "10000s",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,

      "prlctl": [
        [ "set", "{{.Name}}", "--size",      51200 ],
        [ "set", "{{.Name}}", "--memsize",   4096  ],
        [ "set", "{{.Name}}", "--cpus",      2     ]
      ],

      "prlctl_version_file": ".prlctl_version",

      "boot_wait": "10s",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-7.1/ks.cfg<enter><wait>"
    ]}
  ],

  "post-processors": [{
      "type": "vagrant",
      "output": "builds/{{user `name`}}.{{.Provider}}.box",
      "compression_level": 9
  }],

  "provisioners": [{
      "type": "file",
      "destination": "/tmp/metadata.json",
      "source": "{{user `metadata`}}"
    }, {
      "type": "shell",
      "environment_vars": [],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",

      "scripts": [
        "scripts/common/metadata.sh",
        "scripts/centos/fix-slow-dns.sh"
      ]
    }, {
      "type": "shell",
      "execute_command": "{{.Vars}} sh '{{.Path}}' {{user `required_modules`}}",
     "environment_vars": [
        "TEMPLATE={{user `template`}}",
        "OPERATINGSYSTEM=redhat",
        "ARCHITECTURE=x86_64"
      ],

      "scripts": [
        "scripts/puppet/installer.sh"
      ]
    }, {
      "type": "puppet-masterless",
      "execute_command": "{{.FacterVars}} /opt/puppet/bin/puppet apply --verbose --detailed-exitcodes --modulepath='/tmp/packer-puppet-masterless/manifests/modules' {{.ManifestFile}}",

      "facter": {},

      "manifest_dir":  "../manifests",
      "manifest_file": "../manifests/vagrant/nocm.pp"
    }, {
      "type": "shell",
      "execute_command": "{{.Vars}} sh '{{.Path}}' {{user `required_modules`}}",
      "environment_vars": [
        "TEMPLATE={{user `template`}}",
        "PUPPET_NFS={{user `puppet_nfs`}}"
      ],

      "scripts": [
        "scripts/puppet/cleanup.sh",
        "scripts/packer/cleanup.sh",
        "scripts/centos/cleanup.sh",
        "scripts/common/minimize.sh"

      ]
  }],

  "variables": {
    "name": "centos-7.1",

    "build_timestamp": "{{isotime \"20060102150405\"}}",
    "required_modules": "puppetlabs-stdlib saz-sudo stahnma-puppetlabs_yum puppetlabs-apache",
    "puppet_nfs": "{{env `PUPPET_NFS`}}",

    "mirror": "../iso",
    "mirror2": "http://mirrors.kernel.org/centos/7.1.1503/isos/x86_64",

    "metadata": "floppy/dummy_metadata.json",
    "template": "centos-7.1-x86_64",

    "build_version": "1.0.0",
    "headless": ""
  }
}
